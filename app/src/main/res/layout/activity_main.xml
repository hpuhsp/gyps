<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_activity_title_layout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/btn_face_identify"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/shape_blue_radius_layout"
            android:gravity="center"
            android:onClick="onClick"
            android:text="人脸识别"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_sz_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_voice_input"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/shape_blue_radius_layout"
            android:gravity="center"
            android:onClick="onClick"
            android:text="语音听写"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_sz_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_face_identify" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>